<div class="modal fade" id="new_user_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1>Signup</h1>
        <p id="sub1">Please tell us a little about yourself</p>
      </div>
      <div class="modal-body">
        <div id="signup_alert_container">

        </div>
        <form id="account-form" class="form-horizontal" method="post">
          <div id="name-cg" class="form-group">
            <label class="control-label col-sm-3">Name</label>
            <div class="col-sm-9">
              <input id="name-tf" class="form-control" name="name" type="text">
            </div>
          </div>
          <div id="email-cg" class="form-group">
            <label class="control-label col-sm-3">Email</label>
            <div class="col-sm-9">
              <input id="email-tf" class="form-control" name="email" type="text">
            </div>
          </div>
          <div id="country-cg" class="form-group">
            <label class="control-label col-sm-3">Location</label>
            <div class="col-sm-9">
              <select id="country-list" class="form-control" name="country" type="text">
                <option>Please select a country</option>
                {{#each countries}}
                  <option>{{name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <hr />
          <p class="subheading">Choose your username & password</p>
          <div id="signup-username-cg" class="form-group">
            <label class="control-label col-sm-3">Username</label>
            <div class="col-sm-9">
              <input id="signup-username-tf" class="form-control" name="username" type="text">
            </div>
          </div>
          <div id="signup-password-cg" class="form-group">
            <label class="control-label col-sm-3">Password</label>
            <div class="col-sm-9">
              <input id="signup-password-tf" class="form-control" name="password" type="password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-7 col-sm-2">
              <button id="signup_close_btn" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            <div class="col-sm-2">
              <button id="signup_submit_btn" type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->