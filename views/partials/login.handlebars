<div class="modal fade" id="login_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1>Login</h1>
      </div>
      <div class="modal-body">
        <div id="login_alert_container">

        </div>
        <form id="login-form" class="form-horizontal" method="post">
          <div id="login-username-cg" class="form-group">
            <label class="control-label col-sm-3">Username</label>
            <div class="col-sm-9">
              <input id="login-username-tf" class="form-control" name="username" type="text">
            </div>
          </div>
          <div id="login-password-cg" class="form-group">
            <label class="control-label col-sm-3">Password</label>
            <div class="col-sm-9">
              <input id="login-password-tf" class="form-control" name="password" type="password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-7 col-sm-2">
              <button id="login_close_btn" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            <div class="col-sm-2">
              <button id="login_submit_btn" type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->