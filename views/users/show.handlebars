{{#if curuser}}
<div class="w-container">
  <div class="margin-10">
      <div class="w-clearfix prof_box">
        <img class="prof_pic" src="{{curuser.profile_image}}" width="140" height="140" alt="prof-pic">
        <div class="prof_info">
          <h2>{{curuser.name}}</h2>
          <p class="about_me">{{curuser.aboutMe}}</p>
          <div class="social_bar">
            <img class="social_buttons" src="/images/icon_1832.png" alt="52f38673ba5496e141000d86_icon_1832.png">
            <div class="location">{{curuser.country}}&nbsp;&nbsp;</div>
            <img class="social_buttons" src="/images/facebook.png" alt="52f38687593f6edf41000d09_facebook.png">
            <img class="social_buttons" src="/images/twitter.png" alt="52f386ca5d8eed2b6b000e09_twitter.png">
          </div>
        </div>
        <div class="prof_stats"><a class="button" href="#">Follow</a><a class="button" href="#">{{curuser.followers.length}} Followers</a><a class="button" href="#">{{curuser.following.length}} Following</a><a class="button" href="#">{{trips.totalTrips}} Trips</a>
        </div>
      </div>
    </div>
</div>  

<div class="w-row trip_pane">
  <div class="w-col w-col-3 w-clearfix column">
    {{#each trips.col0}}
      {{> trip/trip_tile this}}
    {{/each}}
  </div>

  <div class="w-col w-col-3 column">
    {{#each trips.col1}}
      {{> trip/trip_tile this}}
    {{/each}}
  </div>

  <div class="w-col w-col-3 column">
    {{#each trips.col2}}
      {{> trip/trip_tile this}}
    {{/each}}
  </div>

  <div class="w-col w-col-3 column">
    {{#each trips.col3}}
      {{> trip/trip_tile this}}
    {{/each}}
  </div>

{{else}}
<div><p>You must be logged in to see your trips.</p></div>
{{/if}}

<script type="text/javascript">
$(document).ready(function() {
  function incrementLikes(tripID) {
    var num_likes = parseInt($('#trip_' + tripID + ' .like_counter').html(), 10);
    num_likes += 1;
    $('#trip_' + tripID + ' .like_counter').html(num_likes);
  }

  $('.like_icon').click(function() {
    var tripID = $(this).attr("data-trip");
    var data = {
      "tripID": tripID
    };
    var options = {
      type: "POST",
      url: "/like_trip",
      data: data
    };
    $.ajax(options)
    .done(function(data) {
      incrementLikes(data);
    })
    .fail(function(msg) {
      console.log(msg.responseText);
    });
  });

  function incrementFavorites(tripID) {
    var num_favorites = parseInt($('#trip_' + tripID + ' .favorite_counter').html(), 10);
    num_favorites += 1;
    $('#trip_' + tripID + ' .favorite_counter').html(num_favorites);
  }

  $('.favorite_icon').click(function() {
    var tripID = $(this).attr("data-trip");
    var data = {
      "tripID": tripID
    };
    var options = {
      type: "POST",
      url: "/favorite_trip",
      data: data
    };
    $.ajax(options)
    .done(function(data) {
      incrementFavorites(data);
    })
    .fail(function(msg) {
      console.log(msg.responseText);
    });
  });  
});
</script>